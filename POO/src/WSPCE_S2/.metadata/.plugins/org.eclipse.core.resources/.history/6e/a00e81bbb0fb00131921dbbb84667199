package controleur;

import java.util.ArrayList;

import vue.Affichage;
import modele.Radio;
import modele.Station;

public class CtrlRadio
{
	private ArrayList<Station> listeStationsEnreg;
	private ArrayList<Station> listeStations;
	private Station stationActuelle;
	
	private Affichage aff;
	private Radio radio;
	
	public CtrlRadio(Affichage pAff)
	{
		this.aff = pAff;
		this.radio = new Radio();
		
		this.listeStationsEnreg = new ArrayList<Station>();
		this.listeStations = new ArrayList<Station>();
		this.listeStations.add(new Station("S1", 90.0));
		this.listeStations.add(new Station("S2", 92.0));
		this.listeStations.add(new Station("S3", 94.0));
		this.listeStations.add(new Station("S4", 96.0));
		
		this.stationActuelle = this.listeStations.get(0);
	}
	
	public Radio getRadio()
	{
		return this.radio;
	}
	
	public ArrayList<Station> getListeStationsEnreg()
	{
		return this.listeStationsEnreg;
	}
	
	public ArrayList<Station> getListeStations()
	{
		return this.listeStations;
	}
	
	public void setStationActuelle(Station pSt)
	{
		this.stationActuelle = pSt;
	}
}
