import java.util.*;
public class Dialogue{
	

	
	public static void afficherMenu() {
		
		System.out.println("Menu de l'autoradio");
		System.out.println("a - Ajouter station");
		System.out.println("c - contrôle de l'amplificateur");
		System.out.println("r - rappeler station");
		System.out.println("v - Voir liste des stations enregistrées");
		System.out.println("q - Quitter");
		System.out.print("Choix -> ");
	}
	
	
	public static void tempo () {
		Scanner lect ;
		String s;
		
		lect = new Scanner (System.in );
		
		System.out.print("Tapper un car + return pour continuer ... ");
		s = lect.next();
	}

	public static void main(String argv[]) {
		
		AutoRadio radio = new AutoRadio(5,5,5);
		Controleur.creerStation(92.1, "France Inter", radio);
		Controleur.creerStation(95.0, "BEUR FM", radio);
		Controleur.creerStation(105.5, "France Info", radio);
		String choix;

		boolean continuer ;
		Scanner lect;
		
		String nom;
		double frequence;

		
		
		lect = new Scanner ( System.in );
		lect.useLocale(Locale.US);
		
		
		continuer = true;
		Dialogue.afficherMenu();
		while (continuer) {

			choix = lect.next();
			choix = choix.toLowerCase();
			switch (choix) {
				case "q" :
					System.out.println("ByeBye");
					Dialogue.tempo();
					continuer = false;
					break;
				case "a" :
					System.out.println("Nom de la Station > ");
					nom = lect.next();
					System.out.println("frequence >");
					frequence = lect.nextDouble();
					Controleur.creerStation(frequence,nom, radio);
					System.out.println("Ajout effectué\n");
					Dialogue.tempo();
					break;
				case "v" :
					System.out.println("Liste des stations :  ");
					System.out.println(Controleur.afficherStation(radio));
					Dialogue.tempo();
					break;
				case "r" :
					System.out.println("Vous êtes actuellement sur la station : "+Controleur.afficherStationAt(radio.getPosition(), radio));
					System.out.println("Station précédente  : "+Controleur.afficherStationAt(radio.getPosition()-1, radio));
					System.out.println("Station suivante  : "+Controleur.afficherStationAt(radio.getPosition()+1, radio));
					System.out.println("Souhaitez-vous passer à la station Précédente ou Suivante ? (P/S)");
					lect.nextLine();
					String choixS = lect.nextLine();
					Controleur.changeStation(radio, choixS);
					System.out.println("Vous êtes actuellement sur la station : "+Controleur.afficherStationAt(radio.getPosition(), radio));
					Dialogue.tempo();
					break;	
				case "c" :
					System.out.println(Controleur.afficherReglagesAmpli(radio));
					System.out.println("Quel réglage voulez-vous modifier ? \n t - tonalité \n v -volume \n b - balance");
					lect.nextLine();
					String choixR=lect.nextLine();
					System.out.println("Quelle valeur souhaitez-vous appliquer ?");
					int valeur = lect.nextInt();
					Controleur.reglageAmpli(radio, choixR, valeur);
					Dialogue.tempo();
					break;
				default :
					System.out.println("Erreur de saisie ...");
					Dialogue.tempo();
					break;
			}
		}
		
	}
	

}