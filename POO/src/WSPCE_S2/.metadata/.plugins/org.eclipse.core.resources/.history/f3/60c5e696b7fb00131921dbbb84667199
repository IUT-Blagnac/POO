import java.util.*;


public class AutoRadio{
	private int tonalite, volume, balance, position;
	private ArrayList<Station> tab;
	
	public AutoRadio(int ptonalite,int pvolume,int pbalance){
		tonalite=ptonalite;
		volume=pvolume;
		balance=pbalance;		
		tab = new ArrayList<Station>();
		position=0;
	}
	
	int getTonalite(){
		return this.tonalite;
	}
	
	int getVolume(){
		return this.volume;
	}
	
	int getBalance(){
		return this.balance;
	}
	
	int getPosition(){
		return this.position;
		
	}
	
	String getStationAt(int position){
		String infosPos = tab.get(position).getNom()+" , frequence : "+tab.get(position).getFrequence();
		return infosPos;
	}
	
	void setTonalite(int ptonalite ){
		 tonalite=ptonalite;
	}
	
	void setVolume(int pvolume){
		volume= pvolume;
	}
	
	void setBalance(int pbalance){
		balance= pbalance;
	}
	
	void setPosition(int pPosition){
		position = pPosition;
	}
	
	void addStation (Station inter){
		tab.add(inter);
	}
	
	void rmvStation (Station inter){
		tab.remove(inter);
	}
	
	int getNbStations(){
		return tab.size();
	}
	
	String getListeStations(){
		String liste = "Stations : \n";
		for(int i=0;i<tab.size();i++){
			liste+="Nom : "+tab.get(i).getNom()+" , frequence : "+tab.get(i).getFrequence()+"\n";
			
		}
		return liste;
	}
}