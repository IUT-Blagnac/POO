public class Controleur{
	
	static void creerStation(double freq, String nom, AutoRadio radio){
		Station station = new Station(freq,nom);
		radio.addStation(station);
	}
	
	static String afficherStation(AutoRadio radio){
		return radio.getListeStations();
	}
	
	static String afficherStationAt(int position, AutoRadio radio){
		String infosStation;
		if(position<0 && radio.getPosition()==0){
			infosStation = radio.getStationAt(radio.getNbStations()-1);
			return infosStation;
		} 		
		else if(position==radio.getNbStations()){	
			infosStation =  radio.getStationAt(0);
			return infosStation;
		}
		else{
				infosStation = radio.getStationAt(position);
		return infosStation;
		}
		
	}
	
	static void changeStation(AutoRadio radio, String choix){
				
		if(choix.equals("P")){
			if(radio.getPosition()==0){
				radio.setPosition(radio.getNbStations()-1);
			}else{
				radio.setPosition(radio.getPosition()-1);
			}
		}
		else if(choix.equals("S")){
			if(radio.getPosition()+1==radio.getNbStations()){
				radio.setPosition(0);
			}
			else{
				radio.setPosition(radio.getPosition()+1);
			}
		}
		else{
			System.out.println("Erreur de saisie (P/S), retour au menu principal.");
		}
	}
	
	static String afficherReglagesAmpli(AutoRadio radio){
		String reglages="";
		reglages+="Tonalité : "+radio.getTonalite()+"\n";
		reglages+="Volume : "+radio.getVolume()+"\n";
		reglages+="Balance : "+radio.getBalance()+"\n";
		return reglages;	
		
	}
	
	static void reglageAmpli(AutoRadio radio, String choix, int valeur){
		switch(choix){
			case "t":	
				radio.setTonalite(valeur);
				System.out.println("Tonalité changée, maintenant de : "+radio.getTonalite());
				break;
			case "v":
				radio.setVolume(valeur);
				System.out.println("Volume changé, maintenant de : "+radio.getVolume());
				break;
			case "b":
				radio.setBalance(valeur);
				System.out.println("Balance changée, maintenant de : "+radio.getBalance());
				break;
			default:
				System.out.println("Erreur de saisie, retour au menu principal.");
				break;					
	}
		
	}
}