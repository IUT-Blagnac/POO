    boolean enStock(){
        return(quantite > 0);
    }
    int vendre() throws Exception{
        if (! enStock()) { throws Exception("vente impossible"); }
        quantite = quantite - 1 ;
        return(quantite);
    }
    int reprendre(){
        quantite = quantite + 1 ;
        return(quantite);
    }
